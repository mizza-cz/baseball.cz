            <option value="sledge-reportaz">Sledge – reportáž</option>
            <option value="historie">Historie</option>
            <option value="fan-club">Fan Club</option>
          </select>
        </label>
        <div
          class="d-flex gap-4 align-items-center flex-sm-row flex-column w-100 w-lg-auto"
        >
          <div class="form-input">
            <input
              name="search"
              type="text"
              placeholder="Zadejte hledaný výraz..."
            />
            <button type="submit" class="form-input__btn">
              {% include "@images/search.svg" %}
            </button>
          </div>
          <button class="btn btn-primary w-sm-auto w-100">Hledat</button>
        </div>
