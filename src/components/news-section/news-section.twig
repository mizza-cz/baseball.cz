        action="/news/"
        class="d-flex align-items-center flex-wrap w-100 w-lg-auto form"
      >
        <label class="o-select select">
          <select name="kategorie" class="js-select">
            <option>Vyberte kategorii</option>
            <option value="aktualni-zpravy">Aktuální zprávy</option>
            <option value="rozhovory">Rozhovory</option>
            <option value="reportaze">Reportáže</option>
            <option value="mladez">Mládež</option>
            <option value="tiskove-zpravy">Tiskové zprávy</option>
            <option value="souteze-akce">Soutěže a akce pro fanoušky</option>
            <option value="preview-k-zaoasu">Preview k zápasu</option>
            <option value="ohlasy-po-utkani">Ohlasy po utkání</option>
            <option value="sledge-clanek">Sledge – článek</option>
            <option value="sledge-reportaz">Sledge – reportáž</option>
            <option value="historie">Historie</option>
            <option value="fan-club">Fan Club</option>
          </select>
        </label>
        <label class="o-select select">
          <select name="soutez" class="js-select">
            <option>Vyberte soutěž</option>
            <option value="aktualni-zpravy">Aktuální zprávy</option>
            <option value="rozhovory">Rozhovory</option>
            <option value="reportaze">Reportáže</option>
            <option value="mladez">Mládež</option>
